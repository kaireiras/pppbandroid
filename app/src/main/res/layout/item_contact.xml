<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border"
    android:backgroundTint="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Contact Avatar/Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatar_card"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_contact_initial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Contact Name -->
        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/contact_name"
            android:textSize="17sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/avatar_card"
            app:layout_constraintTop_toTopOf="@+id/avatar_card"
            app:layout_constraintEnd_toStartOf="@+id/btn_edit_contact" />

        <!-- Contact Email -->
        <TextView
            android:id="@+id/tv_contact_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/contact_email"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/tv_contact_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_name"
            app:layout_constraintEnd_toEndOf="@+id/tv_contact_name" />

        <!-- Contact Phone -->
        <TextView
            android:id="@+id/tv_contact_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/contact_phone"
            android:textSize="14sp"
            android:textColor="@color/text_light"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/tv_contact_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_email"
            app:layout_constraintEnd_toEndOf="@+id/tv_contact_name" />

        <!-- Edit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_contact"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="@color/primary"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:contentDescription="@string/edit"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_contact"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_contact"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="@color/error"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:contentDescription="@string/delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
